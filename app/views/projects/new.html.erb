<h1 class="text-center mt-4">Create a new Project</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @project %>
      <%= form_with(model: @project, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, "Project name", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
          </div>
        </div>
        <div class="form-group row">
            <%= f.label :description, "Project Description", class: "col-2 col-form-label text-light" %>
        <div class="col-10">
            <%= f.text_field :description, class: "form-control shadow rounded", placeholder: "Enter Description" %>
        </div>
        </div>

        <div class="input-field">
        <%= f.label :course, class:"active"  %>
        <%= f.collection_select(:course_ids, Course.all.all, :id, :name,
          { prompt: "Select Course (can be empty)" }, { multiple: false, class: "browser-default" }) %>
      </div>
      
         

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to '[ Cancel and return to projects listing ]', projects_path, class: "text-info" %>
    </div>
  </div>
</div>