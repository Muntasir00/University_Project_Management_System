<div class="row">
  <div class="col s12">
    <h3 class="center-align">All Courses</h3>
  </div>
</div>

<% Course.all.each_slice(2) do |courses| %>
  <div class="row">
    <% courses.each do |course| %>
      <div class="col s12 m6">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title"><%= course.short_name %></span>
            <p class="black-text text-darken-2"><strong><%= course.name %></strong></p>
            <p><%= course.description %></p>
          </div>
          <div class="card-action">
            <% if logged_in? && !(current_user.courses.include?(course)) %>
              <%= button_to "Enroll", course_enroll_path(course_id: course.id), class: "waves-effect waves-light btn-small" %>
            <% end %>
            <%= link_to " View Projects", projects_path %>




          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
